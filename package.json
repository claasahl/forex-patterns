{
	"name": "forex-patterns",
	"description": "TBD",
	"version": "0.0.1-SNAPSHOT",
	"license": "GPL-3.0",
	"repository": "https://github.com/claasahl/forex-patterns.git",
	"devDependencies": {
		"jshint": "latest",
		"rimraf": "latest",
		"bootstrap": "4.0.0-alpha.5",
		"stylus": "latest",
		"jade": "latest",
		"browserify": "latest",
		"watch": "latest",
		"parallelshell": "latest"
	},
	"scripts": {
		"clean": "rimraf src/main/webapp/assets",
		"lint": "jshint assets/scripts/**.js",
		"prebuild:js": "npm run lint",
		"build:js": "browserify assets/scripts/main.js > src/main/webapp/assets/main.js",
		"watch:js": "watch 'npm run build:js' assets/scripts/",
		"build:css": "stylus assets/styles/main.styl > src/main/webapp/assets/main.css",
		"watch:css": "watch 'npm run build:css' assets/styles/",
		"build:html": "jade assets/html/index.jade > src/main/webapp/index.html",
		"watch:html": "watch 'npm run build:html' assets/html",
		"build": "npm run build:js && npm run build:css && npm run build:html",
		"build:watch": "parallelshell 'npm run watch:js' 'npm run watch:css' 'npm run watch:html'"
	}
}